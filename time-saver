# Laravel DebugBar
(https://github.com/barryvdh/laravel-debugbar)
composer require barryvdh/laravel-debugbar --dev

# Laravel N+1 Query Detector
(https://github.com/beyondcode/laravel-query-detector)
composer require beyondcode/laravel-query-detector --dev

# VueJS
composer require laravel/ui
php artisan ui vue (for just installing Vue.)
php artisan ui vue --auth (for scaffolding out the auth views.)
npm install && npm run dev
--- npm update vue-loader

# Laravel-mix
npm install laravel-mix --save-dev

# Laravel Migration Actions
(https://github.com/TheDragonCode/laravel-migration-actions)
composer require dragon-code/laravel-migration-actions

# Installing docker-compose on Ubuntu 22
https://linuxhint.com/install-docker-compose-ubuntu-22-04/ 

# install nvm
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.3/install.sh | bash

export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" 
